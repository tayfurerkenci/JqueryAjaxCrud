@model IEnumerable<JqueryAjax.CoreCrud.Models.Category>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            @*Context.Request.Scheme is the base url of the app !*@
            <th>
            <a onclick="showInPopup('@Url.Action("AddOrEdit", "Category",null,Context.Request.Scheme)','Yeni Kategori')" class="btn btn-success text-white"><i class="fas fa-random"> Yeni Kategori</i></a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("AddOrEdit", "Category",new { id=item.CategoryId},Context.Request.Scheme)','Kategoriyi Düzenle')" class="btn btn-warning text-white"><i class="fas fa-pencil-alt">Düzenle</i></a>
                    <form asp-action="Delete" asp-route-id="@item.CategoryId" onsubmit="return jQueryAjaxDelete(this);" class="d-inline">
                        <input type="submit" value="Sil" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
